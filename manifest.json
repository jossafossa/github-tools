{
  "manifest_version": 3,
  "name": "name in manifest.json",
  "description": "description in manifest.json",
  "options_ui": {
    "page": "src/pages/options/index.html"
  },
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "32": "icon-32.png"
    }
  },
  "host_permissions": ["<all_urls>"],
  "chrome_url_overrides": {
    "newtab": "src/pages/newtab/index.html"
  },
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "permissions": ["storage", "scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/pages/content/bootstrap.ts"],
      "all_frames": true
    }
  ],
  "devtools_page": "src/pages/devtools/index.html",
  "web_accessible_resources": [
    {
      "resources": [
        "src/pages/content/index.js",
        "icon-128.png",
        "icon-32.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "{{chrome}}.service_worker": "src/pages/background/index.ts",
    "{{firefox}}.scripts": ["src/pages/background/index.ts"],
    "{{firefox}}.type": "module"
  }
}
